html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

		title= title
		meta(name="description", content=description)

		meta(itemprop="image",content="http://www.johann.co.za/img/johann.jpg")
		meta(name="viewport",content="width=device-width,initial-scale=1,maximum-scale=1")

		link(rel="alternate",type="application/rss+xml",title="Atom Feed",href="/atom.xml")
		link(rel="canonical",href="http://www.johann.co.za/")

		link(href="http://fonts.googleapis.com/css?family=Open+Sans:400,600",rel="stylesheet",media="all")
		link(href="/css/bootstrap.min.css",rel="stylesheet",type="text/css",media="all")
		link(href="/css/bootstrap-responsive.min.css",rel="stylesheet",type="text/css",media="all")
		link(href="/css/style.css",rel="stylesheet",type="text/css",media="all")

		block head
		
	body
		#headerblock.container-fluid
			.container
				.row
					.span8.offset2
						#title-bar
							a#header_about_link(style="float:right;margin-top:2px;",href="/") About
							a#blog-name(href="/")
								h3 Johann du Toit
							span#slogan-block(style="margin-left:5px;margin-top:5px;")
								p(style="style="float:left;") | My crazy adventures with Computers.
						.clearfix(style="margin-bottom:10px;")
		
		#mainpage
			block contents

		footer
			.container(style="margin-top:0;")
				.span8.offset2
					p Copyright Johann du Toit 2012 - #{current_year} 
						a#footer_subscribe_link(href="/atom.xml",style="margin-left:10px;margin-right:10px;") Subscribe to RSS
						a#footer_about_link(href="/") About

		script(src="/js/prettify.min.js",type="text/javascript")
		script(type="text/javascript")
			window.prettyPrint && prettyPrint()
		block scripts