extends page

block contents
	include partials/about
	mixin about_me

	div#main-page-container.container
		div.row
			div.span8.offset2
				center(align="center",style="margin-top:35px;")
					p(style="font-size:20px;") Keep it Simple Stupid
					small Now that's a Motto!
				div(style="margin:20px;")
					h3 Recent Posts
					table.table(style="margin:0;margin-top:10px;")
						- each post in posts
							tr
								td
									a(href=post.url) #{post.title}
								td(style="width:80px;")
									small #{post.date}